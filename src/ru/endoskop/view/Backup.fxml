            <Label id="title" fx:id="title" text="Резервное копирование" />
         </children>
      </HBox>
   </top>
   <center>
      <VBox fx:id="root" alignment="CENTER" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Label id="medium-label" fx:id="createBackup" text="Создать точку восстановления" />
            <Label id="medium-label" fx:id="rollBack" text="Восстановить систему" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
